<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenu"
    android:background="@drawable/mainmenu"
    android:clickable="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY GAME"
        android:id="@+id/play"
        android:onClick="ShiftToGame"
        tools:ignore="HardcodedText"
        android:background="@drawable/button1"
        android:layout_marginRight="81dp"
        android:layout_marginEnd="81dp"
        android:textColor="#fcf8f8"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/about"
        tools:ignore="HardcodedText"
        android:background="@drawable/button1"
        android:textColor="#ffffff"
        android:onClick="GotoAbout"
        android:layout_above="@+id/exit"
        android:layout_alignLeft="@+id/play"
        android:layout_alignStart="@+id/play"
        android:layout_marginRight="81dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exit"
        android:onClick="Exit"
        tools:ignore="HardcodedText"
        android:background="@drawable/button1"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/about"
        android:layout_alignStart="@+id/about"
        android:layout_marginRight="81dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Games Rules"
        android:id="@+id/rules"
        android:layout_below="@+id/play"
        android:layout_alignLeft="@+id/about"
        android:layout_alignStart="@+id/about"
        android:background="@drawable/button1"
        android:textColor="#ffffff"
        android:onClick="GotoRules"
        android:layout_marginRight="81dp" />
</RelativeLayout>
